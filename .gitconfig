[core]
  excludesfile = ~/.gitignore_global
[web]
  browser = open
[alias]
  s    = status
  cm   = commit
  c    = !git add . && git commit -a && git push
  fuck = !git commit --amend && git push --force
  br   = branch
  co   = checkout
  d    = diff
  l    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue(%cr)%Cgreen[%cN]%Creset' --abbrev-commit --date=relative
  who  = shortlog -s -n --
  get  = !git clone git@git.lipsiasoft.com:/$1.git
  open = !open http://$(basename $(pwd)).lipsiasoft.biz
  go   = checkout -B
  switch    = !legit switch \"$@\"
  branches  = !legit branches
  sprout    = !legit sprout \"$@\"
  unpublish = !legit unpublish \"$@\"
  harvest   = !legit harvest \"$@\"
  sync      = !legit sync \"$@\"
  publish   = !legit publish \"$@\"
  graft     = !legit graft \"$@\"
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[merge]
  log = true
	tool = vimdiff
[url "git@github.com:/"]
  insteadOf = "gh:/"
[user]
	name = Dana Kaplan
	email = danamkaplan@gmail.com
[push]
	default = simple
[gist]
	private = true
	browse = false
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[apply]
	ignorewhitespace = change
